{
    "name": "firelight",
    "version": "0.1.0",
    "author": "Broken Lamp LLC",
    "description": "Firelight Game",
    "private": true,
    "homepage": "./",
    "main": "public/electron.js",
    "dependencies": {
        "@types/jest": "24.0.21",
        "@types/node": "12.12.5",
        "@types/react": "16.9.11",
        "@types/react-dom": "16.9.3",
        "core": "file:core",
        "react": "^16.11.0",
        "react-dom": "^16.11.0",
        "react-scripts": "5.0.1",
        "typescript": "3.7.2"
    },
    "scripts": {
        "start": "nf start -p 3000",
        "build:core": "electron-build-env neon build core --release",
        "build": "react-scripts build",
        "test:react": "react-scripts test --env=jsdom",
        "eject": "react-scripts eject",
        "electron": "electron .",
        "electron-start": "node src/start-react",
        "react-start": "env BROWSER=none react-scripts start",
        "pack": "electron-builder --dir",
        "dist": "npm run build && npm run build:core && electron-builder",
        "postinstall": "npm run build:core && install-app-deps && electron-builder install-app-deps"
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "babel-plugin-root-import": "^6.4.1",
        "electron": "^7.1.0",
        "electron-build-env": "^0.2.0",
        "electron-builder": "^22.1.0",
        "foreman": "^3.0.1",
        "neon-cli": "^0.3.3",
        "nodemon": "^1.19.4"
    },
    "build": {
        "appId": "org.brokenlamp.firelight",
        "productName": "Firelight",
        "copyright": "Copyright Â© year Broken Lamp LLC",
        "asarUnpack": [
            "music"
        ],
        "files": [
            "*.js",
            "build",
            "node_modules",
            "music/*.mp3"
        ],
        "mac": {
            "category": "Games"
        },
        "linux": {
            "category": "Game"
        }
    }
}
